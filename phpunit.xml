<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="Api.php" colors="true" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/3.7/phpunit.xsd">

	<testsuites>
		<testsuite name="TravisCI">
			<directory>./PhpUnit/</directory>
		</testsuite>
	</testsuites>

	<filter>
		<blacklist>
			<directory>/vendor</directory>
		</blacklist>
		<whitelist>
			<directory>./</directory>
			<exclude>
				<directory>./PhpUnit</directory>
			</exclude>
		</whitelist>
	</filter>

	<logging>
		<log type="coverage-html" target="build/logs/clover.html"/>
		<log type="coverage-clover" target="build/logs/clover.xml"/>
	</logging>

</phpunit>
