<?xml version="1.0" encoding="UTF-8"?>

<phpunit bootstrap="phpunit.bootstrap.php" stderr="true" colors="true" verbose="true"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/3.7/phpunit.xsd">

	<testsuites>
		<testsuite name="TravisCI">
			<directory>./PhpUnit/</directory>
		</testsuite>
	</testsuites>

	<filter>
		<blacklist>
			<directory suffix=".php">./Extension/*/*/3rdParty</directory>
		</blacklist>
		<whitelist processUncoveredFilesFromWhitelist="true">
			<directory suffix="*.php">./</directory>
			<exclude>
				<directory suffix=".php">./Extension/*/*/3rdParty</directory>
				<directory suffix=".php">./System/Update/</directory>
				<directory suffix=".php">./System/Documentation/</directory>
			</exclude>
		</whitelist>
	</filter>

	<logging>
		<log type="coverage-clover" target="build/logs/clover.xml"/>
	</logging>

	<php>
		<const name="PHPUNIT_SUITE" value="true"/>
	</php>
</phpunit>
